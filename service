
  getFormattedDate(reportDate: Date): string {
    const year = reportDate.getFullYear();
    const month = String(reportDate.getMonth() + 1).padStart(2, '0');
    const day = String(reportDate.getDate()).padStart(2, '0');
    return `${year}-${month}-${day}`;
  }
  

